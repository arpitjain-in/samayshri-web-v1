rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Visits collection - allow public writes (form submissions), no reads
    match /visits/{visitId} {
      // Allow anyone to create a visit request
      allow create: if request.resource.data.keys().hasAll(['name', 'email', 'phone', 'visitDate', 'numberOfVisitors']) 
                    && request.resource.data.name is string
                    && request.resource.data.email is string
                    && request.resource.data.phone is string
                    && request.resource.data.visitDate is string
                    && request.resource.data.numberOfVisitors is string;
      
      // Only authenticated admins can read/update/delete
      // For now, disable read/update/delete - add authentication later
      allow read, update, delete: if false;
    }
    
    // Block all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
